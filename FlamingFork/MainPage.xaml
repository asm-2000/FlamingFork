                <Grid ColumnDefinitions="0.3*,0.4*,0.3*">
                    <BoxView
                        Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gold},
                                                          Dark={StaticResource Primary}}"
                        HeightRequest="2" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Text="Momo"
                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                    Dark={StaticResource Gold}}" />
                    <BoxView
                        Grid.Column="2"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gold},
                                                          Dark={StaticResource Primary}}"
                        HeightRequest="2" />
                </Grid>
                <Border Stroke="{StaticResource Transparent}" StrokeShape="RoundRectangle 10">
                    <ScrollView
                        Padding="10,20"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray50},
                                                          Dark={StaticResource Black}}"
                        Orientation="Horizontal">
                        <CollectionView ItemsLayout="HorizontalList" ItemsSource="{Binding MomoItems}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:MenuItemModel">
                                    <Border
                                        Margin="5,0"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                                          Dark={StaticResource OffBlack}}"
                                        Stroke="{StaticResource Transparent}"
                                        StrokeShape="RoundRectangle 10"
                                        WidthRequest="142">
                                        <VerticalStackLayout Spacing="2">
                                            <Image
                                                Aspect="AspectFill"
                                                HeightRequest="120"
                                                WidthRequest="142">
                                                <Image.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding ItemImageUrl}"
                                                        TargetType="Image"
                                                        Value="">
                                                        <Setter Property="Source" Value="default_image.png" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding ItemImageUrl}"
                                                        TargetType="Image"
                                                        Value="{x:Null}">
                                                        <Setter Property="Source" Value="sign_in.png" />
                                                    </DataTrigger>
                                                </Image.Triggers>
                                                <Image.Source>
                                                    <UriImageSource CachingEnabled="False" Uri="{Binding ItemImageUrl}" />
                                                </Image.Source>
                                            </Image>
                                            <Label
                                                x:Name="ItemName"
                                                Margin="10,5,10,0"
                                                FontSize="12"
                                                HeightRequest="30"
                                                Text="{Binding ItemName}" />
                                            <HorizontalStackLayout Margin="10,0">
                                                <Label FontSize="12" Text="{Binding Quantity, StringFormat='Quantity:   {0}'}" />
                                                <ImageButton
                                                    Margin="15,0,5,0"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DecreaseQuantityCommand}"
                                                    CommandParameter="{Binding Source={x:Reference ItemName}, Path=Text}"
                                                    HeightRequest="15"
                                                    Source="minus.png"
                                                    WidthRequest="16" />
                                                <ImageButton
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=IncreaseQuantityCommand}"
                                                    CommandParameter="{Binding Source={x:Reference ItemName}, Path=Text}"
                                                    HeightRequest="15"
                                                    Source="add.png"
                                                    WidthRequest="15" />
                                            </HorizontalStackLayout>
                                            <Label
                                                Margin="10,0"
                                                FontAttributes="Bold"
                                                FontSize="12"
                                                Text="{Binding ItemPrice, StringFormat='Price:  Rs. {0}'}"
                                                TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                                            Dark={StaticResource Gold}}" />
                                            <Button
                                                Margin="10,10"
                                                FontSize="12"
                                                HeightRequest="35"
                                                Text="Add To Cart" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
